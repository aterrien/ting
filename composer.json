{
    "name": "ccmbenchmark/ting",
    "description": "Ting : a lightweight datamapper",
    "homepage": "http://tech.ccmbg.com/ting/",
    "keywords": [
        "datamapper",
        "database",
        "mapper",
        "model",
        "entity",
        "unitofwork",
        "repository",
        "mysql",
        "pgsql"
    ],
    "support": {
        "issues": "https://bitbucket.org/ccmbenchmark/ting/issues",
        "source": "https://bitbucket.org/ccmbenchmark/ting",
        "docs": "http://tech.ccmbg.com/ting/doc/en/"
    },
    "type": "library",
    "license": "Apache-2.0",
    "require": {
        "php": ">=5.5",
        "aura/sqlquery": "^2.6"
    },
    "require-dev": {
        "atoum/atoum": "dev-master",
        "atoum/stubs": "^2.2"
    },
    "suggest": {
        "pimple/pimple": "Simplify dependency injection pimple can be used with CCMBenchmark\\Ting\\Services (Use version 3.*)",
        "ccmbenchmark/ting_bundle": "Use Ting with Symfony"
    },
    "autoload": {
        "psr-4" : {
            "CCMBenchmark\\Ting\\": "src/Ting/"
        }
    }
}
